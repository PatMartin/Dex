<!DOCTYPE html>
<meta charset="utf-8">
<style>

  html,body{
    height : 100%;
    min-height : 100%;
    width : 100%;
    min-width : 100%;
  }

.chart {
  float:left;
}

body {
  font: 10px sans-serif;
}

.arc path {
  stroke: #fff;
}

#ChartArea1 {
    float: left;
    width: 50%;
    height: 100%;
    overflow:hidden;
}

#ChartArea2 {
  float: left;
  width: 50%;
  height : 100%;
  overflow:hidden;
}

#ParChart {
    width: 100%;
    height: 100%;
}

#Dendrogram {
  width: 100%;
  height : 100%;
}

<%
  println new File("javascript/jqueryui/latest/jquery-ui.min.css").text
  println new File("javascript/jqueryui/latest/jquery-ui.theme.min.css").text
%>

</style>
<html>
  <head>
    <title>DexCharts : Parallel Coordinates To Dendrogram</title>
  </head>
  <body>
<script>
<%
  println new File("javascript/jquery/latest/jquery-2.1.3.min.js").text
  println new File("javascript/jqueryui/latest/jquery-ui.min.js").text
  println new File("javascript/underscore/latest/underscore-min.js").text
  println new File("javascript/d3/latest/d3.min.js").text
  println new File("javascript/dexjs/latest/dex.js").text
  println new File("javascript/dexjs/latest/charts/d3/ParallelCoordinates.js").text
  println new File("javascript/dexjs/latest/charts/d3/Dendrogram.js").text

%>
</script>

<svg id="ChartArea1"></svg>
<svg id="ChartArea2"></svg>
<script>

<%
  def headerStr = "[" + header.collect { return "\"$it\"" }.join(',') + "]"
  def dataRows = []
  data.eachWithIndex
  {
    row, ri ->
    dataRows << "[" + row.collect { return "\"$it\"" }.join(',') + "]"
  }
  println "var csv = { 'header' : $headerStr,\n 'data' : [" + dataRows.join(',\n') + "] };";
%>

var pcChart = new dex.charts.d3.ParallelCoordinates({
  'parent'  : "#ChartArea1",
  'id'      : "ParChart",
  'csv'     : csv
});

var dendrogram = new dex.charts.d3.Dendrogram({
  'parent'                               : "#ChartArea2",
  'id'                                   : "Dendrogram",
  'csv'                                  : csv,
  'transform'                            : 'scale(.9) translate(10, 20)',
  'node.collapsed.circle.radius'         : 8,
  'node.collapsed.circle.fill.fillColor' : "lightgreen",
  'node.collapsed.label.font.weight'     : 'bold',
  'node.collapsed.label.fill.fillColor'  : 'grey',
  'node.expanded.circle.fill.fillColor'  : "steelblue",
  'node.expanded.circle.r'               : 4,
  'node.expanded.label.font.size'        : 14,
  'node.expanded.label.fill.fillColor'   : "grey",
  'node.expanded.label.transform'        : 'translate(10,5) rotate(-20)',
  'node.collapsed.label.transform'       : 'translate(14,6) rotate(-20)',
  'link.stroke.color'                    : "grey",
  'link.stroke.width'                    : 1,
  'link.stroke.opacity'                  : .4,
  'link.stroke.dasharray'                : "5 5"
});

dendrogram.subscribe(pcChart, "select", function(chartEvent) {
  dendrogram.attr('csv', chartEvent.selected).update();
});

pcChart.render();
dendrogram.render();

</script>
</body>
</html>